if [ ! $(pgrep gpg-agent) ]; then
    echo "Starting gpg-agent..."
    echo "WARNING: unless you export the proper environment variables (see `man gpg-agent`) this instance of gpg-agent may only work for rpass."
    eval $(gpg-agent --daemon --enable-ssh-support --write-env-file)
fi

if [ -f ${HOME}/.gpg-agent-info ]; then
    . ${HOME}/.gpg-agent-info
    export GPG_AGENT_INFO
    export SSH_AUTH_SOCK
    export SSH_AGENT_PID
fi

./rpass_py_interface
